# 应用配置
APP_NAME=ContentHub
APP_VERSION=1.0.0
DEBUG=true
LOG_LEVEL=INFO

# 服务器配置
HOST=0.0.0.0
PORT=18010

# 数据库配置
DATABASE_URL=sqlite:///./data/contenthub.db

# 外部服务配置
# Content-Publisher 服务地址
PUBLISHER_API_URL=http://150.158.88.23:3010
PUBLISHER_API_KEY=your-publisher-api-key-here

# Content-Creator CLI 配置
CREATOR_CLI_PATH=/path/to/content-creator
CREATOR_PROJECT_PATH=/path/to/content-creator/project
CREATOR_WORK_DIR=./data/creator-work
CREATOR_MODE=async

# Tavily API 配置（选题搜索）
TAVILY_API_KEY=your-tavily-api-key-here

# 任务调度配置
SCHEDULER_ENABLED=true
SCHEDULER_TIMEZONE=Asia/Shanghai

# 文件存储配置
STORAGE_ROOT=./data/accounts
MAX_UPLOAD_SIZE=10485760

# 安全配置
SECRET_KEY=your-secret-key-here-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=60

# 异步内容生成配置
ASYNC_CONTENT_GENERATION_ENABLED=true
ASYNC_MAX_CONCURRENT_TASKS=5
ASYNC_TASK_TIMEOUT=1800
ASYNC_POLL_INTERVAL=30
ASYNC_AUTO_APPROVE=true
ASYNC_WORKER_COUNT=3

# Webhook 配置（可选）
WEBHOOK_ENABLED=false
WEBHOOK_URL=http://localhost:18010/api/v1/content/callback
WEBHOOK_TIMEOUT=10
WEBHOOK_SECRET_KEY=your-secret-key

# Redis 配置（可选）
REDIS_ENABLED=false
REDIS_URL=redis://localhost:6379/0
