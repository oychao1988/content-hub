# 应用配置
APP_NAME=ContentHub
APP_VERSION=1.0.0
DEBUG=true
LOG_LEVEL=INFO

# 模块配置（逗号分隔的模块列表）
MODULES_ENABLED=auth,accounts,customer,content,scheduler,publisher,publish_pool,dashboard,platform,system,audit,config,users

# 服务器配置
HOST=0.0.0.0
PORT=8001

# 数据库配置
DATABASE_URL=sqlite:///./data/contenthub.db

# 外部服务配置
# Content-Publisher 服务地址
PUBLISHER_API_URL=http://150.158.88.23:3010
PUBLISHER_API_KEY=your-publisher-api-key-here

# Content-Creator CLI 配置
CREATOR_CLI_PATH=/path/to/content-creator
CREATOR_WORK_DIR=./data/creator-work

# Tavily API 配置（选题搜索）
TAVILY_API_KEY=your-tavily-api-key-here

# 任务调度配置
SCHEDULER_ENABLED=true
SCHEDULER_TIMEZONE=Asia/Shanghai

# 文件存储配置
STORAGE_ROOT=./data/accounts
MAX_UPLOAD_SIZE=10485760

# 安全配置
SECRET_KEY=your-secret-key-here-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=60
